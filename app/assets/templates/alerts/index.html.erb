<div class="row">
  <div class="span7"><h2>Alerts</h2></div>
  <div class="span2"><%= partial 'shared/pagination' %></div>
</div>

<table class='sharp'>
  <tr>
    <th>Deputy</th>
    <th>Report</th>
    <th>Act</th>
  </tr>
  <tr ng:repeat="alert in alerts().get()">
    <td>
      <span class="label label-info">
        {{alert.deputy.name}}
      </span>
    </td>
    <td class='max_width_200'>
      <span class='label' ng:class="color_error(alert.error_level)">{{alert.report.group_full_name}}</span> <br>
      {{alert.message}}
    </td>
    <td>
      <a ng:href='{{editUrl(alert)}}' class='btn btn-mini'>Edit</a> &nbsp;
      <a ng:href='{{destroyUrl(alert)}}' class='btn btn-mini btn-danger'>X</a>
    </td>
  </tr>
</table>

<div class="row" style='margin-top:-12px;'>
  <div class="offset7 span2"><%= partial 'shared/pagination' %></div>
</div>
