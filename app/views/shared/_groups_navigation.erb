<div id="sidebar">
  <ul class="navigation">
    <% Group.level1.each do |group| %>
    <li <%= error_attribute group %>>
      <%= link_to_object group %>
      <ul>
        <% group.children.each do |child| %>
          <li <%= error_attribute child %>>
            <%= link_to child.name, child, :class => (child == @group ? 'active' : '') %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
  </ul>
</div>
