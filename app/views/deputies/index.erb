<style>
  #deputies_list{
    border: 1px solid black;
  }
</style>
<%= will_paginate collection %>

<table id="deputies_list" width="100%">
  <tr style="font-weight:bold;">
    <td>Name</td>
    <td>IP</td>
    <td>Last Report</td>
    <td>Actions</td>
  </tr>
  <% collection.each do |deputy| %>
    <tr <%= error_attribute(deputy) %>>
      <td><%= link_to_object deputy %></td>
      <td><%= deputy.address %></td>
      <td><%= time_ago deputy.last_report_at %></td>
      <td><%= link_to_delete deputy, :text => 'delete' %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate collection %>