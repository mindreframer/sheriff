<h1>Groups</h1>
<ul>
  <% Group.level1.each do |group| %>
    <li style="background: <%= color group %>">
      <%= group.name %>
      <ul>
        <% group.children.each do |child| %>
          <li  style="background: <%= color child %>">
            <%= link_to child.name, child, :class => (child == @group ? 'bold' : '') %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>