<% hide_group ||= false %>
<% hide_deputy ||= false %>
<tr <%= error_attribute(report) %>>
  <td>
    <% if checkbox ||= false %>
      <%= check_box_tag 'ids[]', report.id, false, :class => 'report_id checkbox inline' %>
      <%= nbsp(2) %>
    <% end %>

    <%= link_to_edit report, :text => 'Change Validations', :class => 'btn btn-mini' %><br>
    <% if report.validations.size > 0 %>
      <span class='small_bold'><%= human_validation_display(report) %></span>
    <% end %>
    <% if report.description %>
      <span class='small_bold'> <%= report.description %></span>
    <% end %>
  </td>
  <% unless hide_group %>
    <td><%= link_to_object report.group %></td>
  <% end %>
  <% unless hide_deputy %>
    <td><%= link_to_object report.deputy %></td>
  <% end %>
  <td class='max_width_200'><%= report.value %></td>
  <td><%= detailed_time report.reported_at %></td>
  <td><%= button_to_delete report, :text => 'x' %></td>
</tr>
