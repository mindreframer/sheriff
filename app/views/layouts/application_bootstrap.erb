<!-- http://pilu.github.com/web-app-theme/ -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title><%= title %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield :head %>
  </head>
<body>
<%= render 'layouts/topnav' %>


<div class="container" style='margin-top:40px;'>
  <% unless Boolean(Settings['run_cron']) %>
 <div class="row">
   <div class="span12">
    <h3 style='text-weight:bold; color:red;text-align:center;'>CRON DISABLED! <small>(no emails are sent at the moment!)</small></h3>
   </div>
 </div>
  <% end %>

<% alert_types = {:notice => 'success', :warning => '', :error => 'error'} %>
<% flash.each do |type, message| %>
  <% alert_type = alert_types[type] %>
  <div class="alert alert-<%= alert_type %>" >
    <a class="close" data-dismiss="alert">Ã—</a>
     <%= message %>
  </div>
<% end %>


  <div class="row">
    <div id='sidebar' class='span3'>
      <%= yield :sidebar %>
    </div>
    <div id='main_content' class="span9">
      <h2><%= heading %></h2>
      <div class="row">
        <div class='span9'>
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
</html>
