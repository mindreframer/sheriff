<!doctype html>
<html xmlns:ng="http://angularjs.org/" ng:app>
<head>
  <meta charset="utf-8">
  <title>Sheriff</title>
  <link href='/stylesheets/font.css' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tag %>
</head>

<body ng:controller="Sheriff.controllers.SheriffController">

<%= render 'layouts/topnav' %>


<div class="container" style='margin-top:40px;'>
  <div class="row">
    <div id='main_content' class="span12">
      <div class="row">
        <div class='span12'>
          <ng:view></ng:view>
        </div>
      </div>
    </div>
    <div id="footer">
      <div class="block">
        <p>Copyright &copy; <%= Time.now.year %> Dawanda GmbH</p>
      </div>
    </div>
  </div>
</div>


  <script src="/assets/vendor/angular/angular-0.10.5.js" ng:autobind></script>
  <%= javascript_include_tag "application" -%>
</body>
</html>
